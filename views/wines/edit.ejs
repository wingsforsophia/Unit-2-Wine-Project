<%- include('../partials/header') %>
  <h3>
    <%= title %>
  </h3>

  <form action="/wines/<%= wine._id %>?_method=PUT" method="POST">
    <div class="form-row">
      <div class="col">
        <input type="text" class="form-control" name="name" value="<%= wine.name %> ">
      </div>
      <div class="col">
        <input type="text" class="form-control" name="varietal" value="<%= wine.varietal %> ">
      </div>
    </div><br />

    <div class="form-row">
      <div class="col">
        <input type="number" class="form-control" name="year" value="<%= wine.year %>"  >
      </div>
      <div class="col">
        <input type="text" class="form-control" name="image" value="<%= wine.image %> ">
      </div>
    </div><br />
    <div class="form-row">
      <div class="col">
        <input type="text" class="form-control" name="url" value="<%= wine.url %> ">
      </div>
      <div class="col">
        <input type="text" class="form-control" name="websiteName" value="<%= wine.websiteName %>">
      </div>

    </div> <br />
    <div class="form-row">
      <div class="col">
        <input type="text" class="form-control" name="region" value="<%= wine.region %>">
      </div>
      <div class="col">
        <input type="text" class="form-control" name="realPrice" value="<%= wine.realPrice %>">
      </div>
    </div>
    </div> <br />
    <div class="form-row">
       <div class="col">
        <input type="text" name="description" class="form-control" value="<%= wine.description %> ">

      </div>
    </div>
    </div> <br />


    <button type="submit" class="btn btn-success">Update Wine</button>
  </form>

  <%- include('../partials/footer') %>

