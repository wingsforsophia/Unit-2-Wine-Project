<%- include('../partials/header') %>
<h3>
  <%= title %>
</h3>

  
  <% wines.forEach((wine) => { %>

     
    
    <div class="card" style="width: 18rem;" id="wineList">
      <img src="<%= wine.image %> " class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"> <%= wine.name %> </h5>
    
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= wine.varietal %> - <%= wine.year %> </li>
        <li class="list-group-item"> Rating: <%= wine.rating %> </li>
         </ul>
      <div class="card-body">
        <a href="<%= wine.url %> " class="card-link" target="_blank">More Details</a>
        <a href="#" class="card-link">Edit Wine</a>
      </div>
    </div>
    <% })  %> 
    

  <%- include('../partials/footer') %>